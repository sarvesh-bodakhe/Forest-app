<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#6FC3A3"
    >

    <TextView
        android:id="@+id/myTextViewLeaveMeALone"
        android:outlineSpotShadowColor="@color/brown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white_smoke"
        android:text="Leave Me Alone !!"
        android:visibility="invisible"
        />
    <ImageView
        android:paddingTop="10dp"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@mipmap/slogan_main"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/mySeekBar"
        />

    <ImageView
        android:id="@+id/tree_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tree_main"
        android:layout_below="@id/myTextViewPercentage"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/myTextViewCountDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="00:00"
        android:textSize="60sp"
        android:layout_below="@+id/tree_main"
        />

    <Button
        android:id="@+id/myButtonStartCancel"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myTextViewCountDown"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:scrollHorizontally="false"
        android:background="@color/our_green"
        android:text="start" />

    <SeekBar
        android:id="@+id/mySeekBar"
        android:outlineSpotShadowColor="@color/brown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:max="180"
        android:scrollbarSize="15dp" />

    <TextView
        android:id="@+id/myTextViewPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/mySeekBar"
        android:layout_centerHorizontal="true"
        android:text="00 / 00"
        android:textSize="25sp"
        />
</RelativeLayout>